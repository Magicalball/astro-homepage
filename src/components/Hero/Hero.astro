---
import { siteConfig } from '../../config/site';
import Signature from '../Signature/Signature.astro';
import Button from '../Button/Button.astro';
import ScrollIndicator from '../ScrollIndicator/ScrollIndicator.astro';

// 主标题区域组件
---

<section class="hero">
	<div class="hero-content">
		<h1 class="hero-title">
			<span class="greeting fade-seq-1">{siteConfig.greeting}</span>
			<Signature name={siteConfig.name} />
		</h1>
		<p class="hero-subtitle fade-seq-3">
			{siteConfig.subtitle}
		</p>
		<div class="hero-cta fade-seq-4">
			<Button href={siteConfig.buttons.primary.href} variant="primary" text={siteConfig.buttons.primary.text} />
			<Button href={siteConfig.buttons.secondary.href} variant="secondary" text={siteConfig.buttons.secondary.text} />
		</div>
	</div>
	<ScrollIndicator />
</section>

<script is:inline>
	document.addEventListener('DOMContentLoaded', () => {
		const learnMoreBtn = document.querySelector('.btn-secondary');
		if (learnMoreBtn) {
			const handleClick = () => {
				learnMoreBtn.classList.add('btn-clicked');
				setTimeout(() => {
					learnMoreBtn.classList.remove('btn-clicked');
				}, 300);
			};
			learnMoreBtn.addEventListener('click', handleClick);
			learnMoreBtn.addEventListener('touchend', handleClick);
		}
	});
</script>

<style>
	.hero {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		text-align: center;
		padding: 2rem;
		padding-top: calc(80px + 2rem);
		position: relative;
		background: linear-gradient(180deg, #ffffff 0%, #f8f8f8 100%);
	}

	.hero-content {
		max-width: 800px;
		position: relative;
		z-index: 1;
	}

	.hero-title {
		font-size: clamp(2.5rem, 6vw, 4rem);
		font-weight: 600;
		margin: 0 0 1.5rem 0;
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.greeting {
		font-size: 1.5rem;
		font-weight: 300;
		color: #6a6a6a;
		letter-spacing: 0.1em;
	}

	.hero-subtitle {
		font-size: 1.25rem;
		font-weight: 300;
		color: #4a4a4a;
		margin: 3rem 0 3rem 0;
		line-height: 1.6;
	}

	.hero-cta {
		display: flex;
		gap: 1.5rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.fade-seq-1,
	.fade-seq-2,
	.fade-seq-3,
	.fade-seq-4,
	.fade-seq-5 {
		opacity: 0;
		transform: translateY(25px);
	}

	:global(.page-ready) .fade-seq-1,
	:global(.page-ready) .fade-seq-2,
	:global(.page-ready) .fade-seq-3,
	:global(.page-ready) .fade-seq-4,
	:global(.page-ready) .fade-seq-5 {
		animation: fadeInSequence 0.8s ease forwards;
	}

	:global(.page-ready) .fade-seq-1 {
		animation-delay: 0.2s;
	}

	:global(.page-ready) .fade-seq-2 {
		animation-delay: 0.5s;
	}

	:global(.page-ready) .fade-seq-3 {
		animation-delay: 1.4s;
	}

	:global(.page-ready) .fade-seq-4 {
		animation-delay: 1.8s;
	}

	:global(.page-ready) .fade-seq-5 {
		animation-delay: 2.3s;
		animation-duration: 1.5s;
	}
	@keyframes fadeInSequence {
		from {
			opacity: 0;
			transform: translateY(25px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}


	@media (max-width: 768px) {
		.greeting {
			font-size: 1.25rem;
		}

		.hero-subtitle {
			font-size: 1.1rem;
		}
	}

	@media (max-width: 480px) {
		.hero-cta {
			flex-direction: column;
			width: 100%;
		}
	}
</style>


