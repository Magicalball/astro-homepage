---
import { siteConfig } from '../../config/site';
// 关于我/简介组件
---

<section id="about" class="about">
	<div class="container">
		<h2 class="section-title">{siteConfig.about.title}</h2>
		<div class="about-content">
			<div class="about-text">
				{siteConfig.about.descriptions.map((desc) => (
					<p class="about-description">{desc}</p>
				))}
			</div>
		</div>
	</div>
</section>

<style>
	@import '../../styles/shared.css';

	.about {
		min-height: 100vh;
		display: flex;
		align-items: center;
		padding: 6rem 2rem;
		background: #ffffff;
	}

	.container {
		max-width: 800px;
		width: 100%;
		margin: 0 auto;
	}

	.about-content {
		text-align: center;
	}

	.about-description {
		font-size: 1.125rem;
		line-height: 1.8;
		color: #4a4a4a;
		margin: 0 0 1.5rem 0;
		font-weight: 300;
	}

	.about-description:last-child {
		margin-bottom: 0;
	}

	@media (max-width: 768px) {
		.about {
			min-height: 100vh;
			padding: 4rem 1.5rem;
		}

		.about-description {
			font-size: 1rem;
		}
	}
</style>

